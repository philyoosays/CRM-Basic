<% include ./partials/personInfo %>

  <form action="/people/<%= contact.id %>/<%= contact.addressid %>/edit?_method=put" method="post">
    <div class="searchcontainer">
      <div class="namesearch">
        <label for="prefix">Prefix</label>
          <input type="text" id="prefix" name="prefix" value="<%= contact.prefix %>">
          <br />
        <label for="fname">First Name</label>
          <input type="text" id="fname" name="fname" value="<%= contact.fname %>">
          <br />
        <label for="mname">Middle Name</label>
          <input type="text" id="mname" name="mname" value="<%= contact.mname %>">
          <br />
        <label for="lname">Last Name</label>
          <input type="text" id="lname" name="lname" value="<%= contact.lname %>">
          <br />
        <label for="suffix">Suffix</label>
          <input type="text" id="suffix" name="suffix" value="<%= contact.suffix %>">
          <br />
      </div>
      <div class="addysearch">
          <input type="text" id="address" name="address" value="<%= contact.address %>">
        <label for="address">Address</label>
        <br />
          <input type="text" id="city" name="city" value="<%= contact.city %>">
        <label for="city">City</label>
        <br />
          <input type="text" id="state" name="state" value="<%= contact.state %>">
        <label for="state">State</label>
        <br />
          <input type="text" id="zipcode" name="zipcode" value="<%= contact.zipcode %>">
        <label for="zipcode">zipcode</label>
        <br />
      </div>
    </div>
    <div class="miscnewperson">
      <input type="hidden" name="main" value="true">
      <label for="onlyannualreceipt">Only Annual Receipts</label>
      <select name="onlyannualreceipt" id="onlyannualreceipt">
        <option value="true">True</option>
        <option value="false" selected>False</option>
      </select>
    </div>
    <div class="miscnewperson">
      <label for="isActive">Active?</label>
      <select id="isActive" name="active">
        <option value="true" selected>True</option>
        <option value="false">False</option>
      </select>
    </div>

      <br />
    <hr />
  <div class="button">
      <input type="submit" value="Save">
    </form>
    <form action="/people/<%= contact.id %>" method="get">
      <input type="submit" value="Cancel">
    </form>
  </div>
</div>

<% include ./partials/foot %>
