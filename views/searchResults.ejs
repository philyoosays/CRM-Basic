<% include ./partials/boilerplate %>

<div class="main">
  <div class="searchform">
    <div class="searchtitle">
      <h1>Search Form</h1>
    </div>
    <form action="/search/results" method="get">
      <div class="namesearch">
        <input type="text" name="prefix" placeholder="prefix" value="<%= input.prefix %>">
        <input type="text" name="fname" placeholder="first name" value="<%= input.fname %>">
        <input type="text" name="mname" placeholder="middle name" value="<%= input.mname %>">
        <input type="text" name="lname" placeholder="last name" value="<%= input.lname %>">
        <input type="text" name="suffix" placeholder="suffix" value="<%= input.suffix %>">
      </div>
      <div class="addysearch">
        <input type="text" name="address" placeholder="address" value="<%= input.address %>">
        <input type="text" name="city" placeholder="city" value="<%= input.city %>">
        <input type="text" name="state" placeholder="state" value="<%= input.state %>">
        <input type="text" name="zipcode" placeholder="zipcode" value="<%= input.zipcode %>">
      </div>
      <div class="button">
        <input type="submit" value="Search">
      </div>
    </form>
  </div>
  <div class="results">
    <% result.forEach(d => { %>
      <div>
        <a href="/people/<%= d.id %>"><p><%= d.prefix %> <%= d.fname %> <%= d.mname %> <%= d.lname %> <%= d.suffix %></p></a>
        <p><%= d.address %>, <%= d.city %>, <%= d.state %>, <%= d.zipcode %></p>
      </div>
      <hr />
    <% }) %>
  </div>
</div>

<% include ./partials/foot %>
